PROGRAM ACADEMIA;
USES CRT;
VAR PESO,ALTURA,MAIOR,MENOR,MEDIA,IMC:REAL;
    NOME:STRING[25];
    CONT,CONT2,CONT3,CONT4:INTEGER;
BEGIN
IMC:=0;
CONT:=0;
CONT2:=0;
CONT3:=0;
CONT4:=0;
MAIOR:=0;
MENOR:=999;
WHILE(TRUE)DO
BEGIN
CLRSCR;
WRITELN(' ');
WRITELN('PROGRAMA ACADEMIA');
WRITELN('DIGITE FIM NO NOME PARA ABANDONAR O PROGRAMA');
WRITELN(' ');
WRITELN('Digite o seu nome: ');
READLN(NOME);
IF(NOME = 'FIM')
THEN BREAK;
REPEAT
WRITELN('Digite sua altura: ');
READLN(ALTURA);
UNTIL(ALTURA>=1.20)AND(ALTURA<=2.40);
REPEAT
WRITELN('Digite o seu peso: ');
READLN(PESO);
UNTIL(PESO>=20);
IMC:=PESO/(ALTURA*ALTURA);
CONT4:=CONT4+1;
IF(IMC<=18.5)THEN
CONT:=CONT+1
ELSE IF(IMC>=24.9)THEN
CONT2:=CONT2+1
ELSE CONT3:=CONT3+1;
IF(PESO>MAIOR)THEN
MAIOR:=PESO;
IF(PESO<MENOR)THEN
MENOR:=PESO;
MEDIA:=(MEDIA+PESO)/CONT4;
IF(IMC<=18.5)THEN
WRITELN(NOME,' VOCE ESTA ABAIXO DO PESO IDEAL, SEU IMC ê: ',IMC:4:1)
ELSE IF(IMC>=24.9)THEN
WRITELN(NOME,' VOCE ESTA ACIMA DO PESO IDEAL, SEU IMC ê: ',IMC:4:1)
ELSE
WRITELN(NOME,' VOCE ESTA NO SEU PESO IDEAL, SEU IMC ê: ',IMC:4:1);
READKEY;
END;
CLRSCR;
GOTOXY(10,15);
WRITELN('O NUMERO DE ALUNOS ABAIXO DO PESO IDEAL ê: ',CONT);
GOTOXY(10,20);
WRITELN('O NUMERO DE ALUNOS ACIMA DO PESO IDEAL ê: ',CONT2);
GOTOXY(10,25);
WRITELN('O MAIOR PESO REGISTRADO ê: ',MAIOR:4:1);
GOTOXY(10,30);
WRITELN('O MENOR PESO REGISTRADO ê: ',MENOR:4:1);
GOTOXY(10,35);
WRITELN('A MEDIA DE PESOS ê: ',MEDIA:4:0);
READKEY;
END.



