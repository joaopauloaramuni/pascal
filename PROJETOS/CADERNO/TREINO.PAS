PROGRAM TREINO;
USES CRT;
VAR ALT,MAIOR,MENOR,SOMA:REAL;
    SEXO:CHAR;
    I,CONTM,CONTF:INTEGER;
BEGIN
CLRSCR;
I:=1;
SOMA:=0;
CONTF:=0;
CONTM:=0;
MAIOR:=0;
MENOR:=999;
WHILE(I<=15)DO
BEGIN
   REPEAT
    WRITE('Digite sua Altura: ');
    READLN(ALT);
   UNTIL((ALT>0.1)AND(ALT<3.0));
   REPEAT
    WRITE('Digite seu sexo: ');
    READLN(SEXO);
    SEXO:=UPCASE(SEXO);
   UNTIL((SEXO='M')OR(SEXO='F'));
   IF(ALT>MAIOR)THEN
   MAIOR:=ALT;
   IF(ALT<MENOR)THEN
   MENOR:=ALT;
   IF(SEXO='M')THEN
   CONTM:=CONTM+1
   ELSE
   CONTF:=CONTF+1;
   IF(SEXO='F')THEN
   SOMA:=SOMA+ALT;
   I:=I+1;
END;
WRITELN('A MAIOR ALTURA ê: ',MAIOR:2:1);
WRITELN('A MENOR ALTURA ê: ',MENOR:2:1);
IF(CONTF>0)THEN
WRITELN('A MêDIA DE ALTURA DAS MULHERES ê: ',SOMA/CONTF:2:1);
WRITELN('O NÈMERO DE HOMENS ê: ',CONTM);
DELAY(10000);
END.