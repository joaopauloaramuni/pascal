PROGRAM DELTA_LTDA;
USES CRT;
VAR NOME,NMAIOR,RESP:STRING[35];
    SAL,NSAL,TOT,MAIOR:REAL;
    DEPEN,ACIMA,FUNC:INTEGER;
BEGIN
     MAIOR:=0;
     ACIMA:=0;
     NSAL:=0;
     TOT:=0;
     FUNC:=0;
     WHILE(TRUE)DO
     BEGIN
     CLRSCR;
     WRITELN('PROGRAM DELTA_LTDA');
     WRITELN('DIGITE SAIR NO NOME PARA ABANDONAR O PROGRAMA');
     WRITE('DIGITE SEU NOME: ');
     READLN(NOME);
     IF(NOME='SAIR')THEN BREAK;
     REPEAT
     WRITE('DIGITE SEU SALARIO: ');
     READLN(SAL);
     UNTIL((SAL>0));
     REPEAT
     REPEAT
     WRITE('DIGITE O NUMERO DE DEPENDENTES: ');
     READLN(DEPEN);
     UNTIL((DEPEN>=0)AND(DEPEN<=5)AND(DEPEN=INT(DEPEN)));
     WRITE('O NUMERO DE DEPENDENTES : ',DEPEN,' ? ');
     READLN(RESP);
     UNTIL((RESP='SIM')or(RESP='S'));
     IF(SAL<1000)THEN
     NSAL:=(SAL+(SAL*0.3))+(50*DEPEN)
     ELSE IF((SAL>=1000)AND(SAL<=1500))THEN
     NSAL:=(SAL+(SAL*0.25))+(50*DEPEN)
     ELSE IF(SAL>=1500)THEN
     NSAL:=(SAL+(SAL*0.2))+(50*DEPEN);
     WRITELN('SEU NOME : ',NOME,' E SEU NOVO SALARIO : ',NSAL:5:2);
     READKEY;
     TOT:=TOT+NSAL;
     FUNC:=FUNC+1;
     IF(NSAL>2000)THEN
     ACIMA:=ACIMA+1;
     IF(NSAL>MAIOR)THEN
     NMAIOR:=NOME;
     END;
     CLRSCR;
     WRITELN('TOTAL DOS SALARIOS A SEREM PAGOS: ',TOT:5:2);
     IF(FUNC>0)THEN
     WRITELN('MEDIA DOS NOVOS SALARIOS: ',TOT/FUNC:5:2);
     WRITELN('ACIMA DE 2000 SAO: ',ACIMA);
     WRITELN('NOME DO QUE TEM MAIOR SALARIO: ',NMAIOR);
     READKEY;
END.




